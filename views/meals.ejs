<% include common/header %>
<div class="container-fluid">
    <div class="row">
        <div class="page-heading container-fluid">
            <img src="http://www.jwmarriotthanoilife.com/Content/upload/images/inner/FoieGras.jpg" alt="Meals">
            <div class="heading"><h1>Meals</h1></div>
        </div>
    </div>
</div>
<div id="cart-container">
    <div id="cart">
        <i class="fa fa-shopping-cart fa-2x openCloseCart" aria-hidden="true"></i>
        <button id="emptyCart" class="btn-danger">Empty Cart</button>
    </div>
    <span id="itemCount"></span>
</div>

<div id="shoppingCart">
    <div id="cartItemsContainer">
        <h2 class="text-center">BOOKING CART</h2>
        <hr>
        <i class="fa fa-times-circle-o fa-3x openCloseCart" aria-hidden="true"></i>
        <div id="cartItems"></div>
        <div class="text-right">
            <span id="cartTotal"></span>
        </div>
        <hr>
        <div class="text-center">
            <p>Please check your order information and click confirm to fill in your contact detail!</p>
            <a href="/booking">
                <button type="button" class="btn-danger" class="openCloseCart btnConfirm" name="btnConfirmCart"
                        aria-hidden="true">CONFIRM
                </button>
            </a>
        </div>
    </div>
</div>

<div class="container-fluid box-content breakfast pt-5">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="breakfast container-fluid">
                <div class="heading text-center"><h2>Breakfast</h2></div>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <p class="content text-center">Enjoy a homestyle country breakfast, morning, noon, or night.
            </p>
        </div>
        <div class="col-lg-2"></div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <% listBreakfast.forEach(function(dish){ %>
            <div class="col-lg-3 meal-content">
                <div class="meal-content-img-box">
                    <a href="#myModal<%= dish.id %>" data-toggle="modal" data-target="#myModal<%= dish.id %>"
                       class="meal-content-img play-icon popup-with-zoom-anim">
                        <img class="item-img"
                             src="<%= dish.thumbnail %>"
                             alt="<%= dish.name %>">
                    </a>
                    <div class="on-pic-content">
                        <h2>$<span class="price"><%= dish.price %></span>
                            <p class="name"><%= dish.name %></p></h2>
                        <button class="add btn-danger" id="item<%= dish.id %>">+</button>
                        <button class="sub btn-danger" id="item<%= dish.id %>">-</button>
                    </div>
                </div>
                <div class="modal" id="myModal<%= dish.id %>">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <button type="button" class="close text-right pr-2" data-dismiss="modal">&times;</button>
                            <div class="modal-body">
                                <h3 class="text-center item-detail-heading"><%= dish.name %></h3>
                                <div class="item-detail-img">
                                    <img src="<%= dish.thumbnail %>"
                                         alt="<%= dish.name %>">
                                </div>
                                <p class="pt-3 text-center item-detail-text"><%= dish.description %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>

